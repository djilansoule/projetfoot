{% block javascripts %}
  <script>
    $('#button-youtube').click(function (){

      if($(this).hasClass('btn-danger')){
        $(this).removeClass('btn-danger');
        $('#block-youtube').hide();
        $('#block-internallink').show();

      }else{
        $(this).addClass('btn-danger');
        $('#block-youtube').show();
        $('#block-internallink').hide();

      }
    })

    $.ajax({
      url : "{{ path('footballer_check_friend',{id:footballer.id}) }}",
      type : 'POST',
      success : function (serverResponse) {
        if(serverResponse.result == 0){
          $('.add-footballer').show();
        }
        if(serverResponse.result == 1){
          $('.add-footballer').show();
          $('.add-footballer i').css('color','green');
        }
      }
    })
  </script>
