{% extends 'socialNetwork/base.html.twig' %}
{% block css %}

{% endblock %}
{% block body %}
<div class="container">

  <!-- Timeline
  ================================================= -->
  <div class="timeline">
    {% include('socialNetwork/inc/timeline-footballer.html.twig') %}
    <div id="page-contents">
      <div class="row">
        <div class="col-md-3">

          <!--Edit Profile Menu-->
          {% include('socialNetwork/inc/edit-menu-profil.html.twig') %}
        </div>
        <div class="col-md-7" style="padding-top: 0;padding: 0 30px;">

          <!-- Post Create Box
          ================================================= -->

          {% for message in app.flashes('success') %}
            <div class="alert alert-success">
              {{ message }}
            </div>
          {% endfor %}
          {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
              {{ message }}
            </div>
          {% endfor %}
          {% if posts is empty %}
            <div class="create-post">
              <h1>Bienvenue sur skillfoot !</h1>
              <p>Alors champion, met en ligne ta premi√®re publication !</p>
            </div>
          {% endif %}
          {% include 'socialNetwork/inc/post/post.html.twig' %}

        </div>
      </div>
    </div>
  </div>

  {% endblock %}
  {% block javascripts %}
    <script src="{{ asset('socialNetwork/js/post.js') }}"></script>
  {% endblock %}
