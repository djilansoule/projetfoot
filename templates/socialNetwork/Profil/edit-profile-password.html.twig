{% extends 'socialNetwork/base.html.twig' %}
{% block body %}

    <div class="container main-container">

      <!-- Timeline
      ================================================= -->
      <div class="timeline">
        {% include('socialNetwork/inc/timeline-footballer.html.twig') %}
        <div id="page-contents">
          <div class="row" id="page-contents-child">
            <!--Edit Profile Menu-->
            {% include('socialNetwork/inc/edit-menu-profil.html.twig') %}
            <div class="block-profil col-sm-12">

              <!-- Changement de mot de passe
              ================================================= -->
              <div class="edit-profile-container">
                <div class="block-title">
                  <h4 class="grey"><i class="icon ion-ios-locked-outline"></i>Changement de mot de passe</h4>
                  <div class="line"></div>
                  {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                      {{ message }}
                    </div>
                  {% endfor %}
                  {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                      {{ message }}
                    </div>
                  {% endfor %}
                </div>
                <div class="edit-block">
                  <form id="education" action="{{ path('footballer_editPassword') }}" class="form-inline" method="post">
                    <div class="row">
                      <div class="form-group col-xs-12">
                        <label for="my-mot-de-passe">Ancien mot de passe</label>
                        <input id="my-mot-de-passe" class="form-control input-group-lg" type="password" name="old-password" title="Enter mot de passe" placeholder="Ancien mot de passe"/>
                      </div>
                    </div>
                    <div class="row">
                      <div class="form-group col-lg-6 col-sm-12">
                        <label>Nouveau mot de passe</label>
                        <input class="form-control input-group-lg" type="password" name="new-password" title="Entrer votre nouveau mot de passe" placeholder="Nouveau mot de passe"/>
                      </div>
                      <div class="form-group col-lg-6 col-sm-12">
                        <label>Confirmez votre nouveau mot de passe</label>
                        <input class="form-control input-group-lg" type="password" name="confirm-new-password" title="Confirmez votre mot de passe" placeholder="Confirmez votre nouveau mot de passe"/>
                      </div>
                    </div>
                    <button name="button-password" class="btn btn-primary">Modifier le mot de passe</button>
                  </form>
                </div>
              </div>
              <a style="cursor: pointer" data-toggle="modal" data-target="#supp-account">Supprimer mon compte définitivement</a>
              <div class="modal fade" id="supp-account" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Supprimer mon compte définitivement</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <div class="modal-body">
                        <p>Attention, la suppression de votre compte est irréversible !</p>
                        <p>L'ensemble de vos données seront supprimées immédiatement.</p>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                      <a type="button" href="{{ path('footballer_delete_account') }}" class="btn btn-primary">Supprimer</a>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <div class="col-md-2 static">

            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
